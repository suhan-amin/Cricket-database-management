    <style>
        .userpagetitle{
    text-align:center;
}

.Userpage{
    margin-left: auto;
    margin-right: auto;
    background-color:gainsboro;
}

.Userpage_row{
    display:flex;
    z-index:1;
    margin-left:5px;
    margin-right:5px;
    background-color: aqua;
}

.Userbackbutton{
    background:black;
    color:white;
    font-size:15px;
    border:2px solid;
    border-color:white;
    width:100%;
    height:50px;
}

.Userbackbutton:hover{
    background-color:rgb(10, 194, 250);
    color:black;
    border-color:black;
}


.Content{
    display:flex;
    flex-direction:column;
    background-color:rgb(10, 194, 250);
    color:black;
    align-items:center;
    justify-content:flex-end;
    margin:10px;
    padding:20px;
    width:100%;
    max-height:400px;
    min-width:100px;
    z-index:1;
}

.Content_name{
    height:5px;
    margin-bottom:15px;
}

.Content_totscore{
    margin-top:5px;
}

.Content_totwickets{
    margin-top:5px;
}

.Content_highscore{
    margin-top:5px;
}

.Content_highwicket{
    margin-top:5px;
}

.Content_average{
    margin-top:5px;
}

.View{
    background:black;
    border:1px solid;
    margin-top:10px;
    border-color:white;
    color:white;
}

.View:hover{
    background-color:rgb(184, 190, 192);
    color:black;
    border-color:black;
}


    </style>
</head>
<body>
<div class="Userpage" style="margin-left: 400px;">
    <h1 class="userpagetitle">Performances</h1>
    <div class="Userpage_container">
        <% for (var i=0;i<scores.length;i++){%>
            <div class="Userpage_row">
                <div class="Content">
                    <div class="Content_name">
                        <strong>Name: <%-scores[i].fname%>
                                <%-scores[i].lname%></strong>
                    </div>
                    <div class="Content_totscore">
                        <strong>Total Score: <%-scores[i].totalscore%></strong>
                    </div>
                    <div class="Content_totwickets">
                        <strong>Total Wickets: <%-scores[i].totalwicket%></strong>
                    </div>
                    <div class="Content_highscore">
                        <strong>Highest Score: <%-scores[i].score%></strong>
                    </div>
                    <div class="Content_highwicket">
                        <strong>Highest Wicket: <%-scores[i].wicket%></strong>
                    </div>
                   
                   

                    <button class='View' onclick="addscore('<%-scores[i].usn%>')" data-toggle="modal" data-target="#exampleModalCenter">Add Score</button>

                </div>

            </div>
            <%}%>
</div>
</div>
<div class="modal fade " id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" style="margin-top: 100px;" role="document">
        <form>
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">Add Plan</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body mx-3">
                    <div class="md-form mb-5">
                        <label data-error="wrong" data-success="right" for="defaultForm-email">Match ID </label>

                        <input type="text" id="defaultForm-email" class="form-control validate" name="matchid">

                    </div>   
               
               
                    <div class="md-form mb-5">
                        <label data-error="wrong" data-success="right" for="defaultForm-email">Score</label>
                
                        <input type="text" id="defaultForm-email" class="form-control validate" name="score">
                
                    </div>
             
               
                    <div class="md-form mb-5">
                        <label data-error="wrong" data-success="right" for="defaultForm-email">Wickets</label>
                
                        <input type="text" id="defaultForm-email" class="form-control validate" name="wicket">
                
                  
                </div>
                 </div>
                <div class=" d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary" style="margin-bottom: 10px;"
                        onclick="saveuserdetails()">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    async function addscore(i){
        console.log(i);
        localStorage.setItem("score",i);

    }

    async function saveuserdetails(){
        const form=document.querySelector('form');

        const matchid=form.matchid.value;
        const score=form.score.value;
        const wicket=form.wicket.value;
        const usn=localStorage.getItem("score");

        try {
            const res = await fetch('/home/insertvalue', {
                method: 'POST',
                body: JSON.stringify({ matchid: matchid, score: score, wicket: wicket,usn:usn }),
                headers: { 'Content-Type': 'application/json' }
            });
            const data = await res.json();

            if (res.status == 200) {
                console.log(22);
                location.reload();
            }

        }
        catch (err) {
            console.log(err);
        }
    }
</script>
</body>
</html>