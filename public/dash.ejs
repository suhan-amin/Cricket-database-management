<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>Document</title>
    <style>
        .userpagetitle{
    text-align:center;
}

.Userpage{
    margin-left: auto;
    margin-right: auto;
    background-color:gainsboro;
}

.Userpage_row{
    display:flex;
    z-index:1;
    margin-left:5px;
    margin-right:5px;
    background-color: aqua;
}

.Userbackbutton{
    background:black;
    color:white;
    font-size:15px;
    border:2px solid;
    border-color:white;
    width:100%;
    height:50px;
}

.Userbackbutton:hover{
    background-color:rgb(10, 194, 250);
    color:black;
    border-color:black;
}


.Content{
    display:flex;
    flex-direction:column;
    background-color:rgb(10, 194, 250);
    color:black;
    align-items:center;
    justify-content:flex-end;
    margin:10px;
    padding:20px;
    width:100%;
    max-height:400px;
    min-width:100px;
    z-index:1;
}

.Content_name{
    height:5px;
    margin-bottom:15px;
}

.Content_totscore{
    margin-top:5px;
}

.Content_totwickets{
    margin-top:5px;
}

.Content_highscore{
    margin-top:5px;
}

.Content_highwicket{
    margin-top:5px;
}

.Content_average{
    margin-top:5px;
}

.View{
    background:black;
    border:1px solid;
    margin-top:10px;
    border-color:white;
    color:white;
}

.View:hover{
    background-color:rgb(184, 190, 192);
    color:black;
    border-color:black;
}


    </style>
</head>
<body>

<div class="Userpage">
    <h1 class="userpagetitle">Performances</h1>
    <div class="Userpage_container">
    <% for (var i=0;i<scores.length;i++){%>
        <div class="Userpage_row">
        <div class="Content">
            <div class="Content_name">
                <strong>Name: <%-scores[i].fname%> <%-scores[i].lname%></strong>
            </div>
            <div class="Content_totscore">
                <strong>Total Score: <%-scores[i].totalscore%></strong>
            </div>
            <div class="Content_totwickets">
                <strong>Total Wickets: <%-scores[i].totalwicket%></strong>
            </div>
            <div class="Content_highscore">
                <strong>Highest Score: <%-scores[i].score%></strong>
            </div>
            <div class="Content_highwicket">
                <strong>Highest Wicket: <%-scores[i].wicket%></strong>
            </div>
            <div class="Content_average">
                <strong>Average: 56.3</strong>
            </div>
            <button class='View' onclick="viewperf('<%-scores[i].usn%>')">View Performance</button>
        
        </div>
        
    </div>
    <%}%>
   
    


    <button class='Userbackbutton' onclick><strong>Back Home</strong></button>
   

    <script>

        async function  viewperf(i){
            console.log(i);

            //  const res = await fetch(`/home?usn={i}`, {
            //     method: 'GET',
                
            //     headers: { 'Content-Type': 'application/json' }
            // });

            location.assign(`/home/view?usn=${i}`);
            
        }
    </script>

</div>
</body>
</html>